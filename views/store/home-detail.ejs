<%- include('../partials/head') %>
</head>
<body class="bg-gray-50 min-h-screen">
  <%- include('../partials/nav') %>
  
  <main class="pt-24 pb-12">
    <!-- Welcome Section -->
    <section class="text-center mb-12">
      <h2 class="text-4xl font-bold text-red-500 mb-6">Here is your Home</h2>
      <p class="text-gray-600 text-lg">Discover the details of your chosen property below</p>
    </section>

    <!-- Home Details Section -->
    <section class="container mx-auto px-6 sm:px-8 lg:px-12 max-w-5xl">
      <div class="flex flex-col sm:flex-row bg-white rounded-lg shadow-lg overflow-hidden">
        
        <!-- Home Image -->
        <div class="w-full sm:w-1/2">
          <img 
            src="<%= home.photoUrl %>" 
            alt="<%= home.houseName %> photo" 
            class="w-full h-64 sm:h-auto object-cover"
          >
        </div>

        <!-- Home Details -->
        <div class="w-full sm:w-1/2 p-8 space-y-6">
          <h3 class="text-3xl font-semibold text-gray-800"><%= home.houseName %></h3>
          <p class="text-xl font-medium text-blue-600">Price: Rs <%= home.price %></p>
          <p class="text-lg text-gray-500">Location: <%= home.location %></p>

          <!-- Rating -->
          <div class="flex items-center">
            <span class="text-yellow-400 text-2xl mr-2">‚≠ê</span>
            <span class="text-gray-600 text-lg"><%= home.rating %> / 5</span>
          </div>

          <!-- Action Buttons -->
          <div class="space-y-3">
            <a href="/rules/<%= home._id %>" class="text-blue-500 hover:text-blue-900 mr-2">House Rules</a>
            <%- include("../partials/add-to-favourite" , {home: home}) %>
          </div>
        </div>
      </div>
    </section>
  </main>
</body>
</html>
