<%- include('../partials/head')%>
</head>
<body class="bg-gray-100 min-h-screen">
  <%- include('../partials/nav')%>
  <main class="pt-20">
    <!-- Welcome Section -->
    <div class="flex items-center justify-center mb-8">
      <div class="bg-white p-8 rounded-lg shadow-md max-w-md text-center">
        <h2 class="text-3xl font-bold text-red-400 mb-4">
          Here are all the homes
        </h2>
        <p class="text-gray-600">
          Explore a variety of homes or host your own!
        </p>
      </div>
    </div>

    <!-- Homes List -->
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% homes.forEach(home => { %>
          <div class="bg-white shadow-lg rounded-lg p-6 flex flex-col items-center text-center">
            <img src="<%= home.photoUrl %>" alt="<%= home.houseName %> photo" class="w-full h-48 object-cover rounded-md mb-4">
            <h3 class="text-xl font-semibold text-gray-800 mb-2"><%= home.houseName %></h3>
            <p class="text-lg text-gray-600 font-medium mb-1">Price: <span class="text-blue-600">Rs<%= home.price %></span></p>
            <p class="text-gray-500 mb-1">Location: <%= home.location %></p>
            <div class="flex items-center justify-center mt-2">
              <span class="text-yellow-500 mr-1">‚≠ê</span>
              <span class="text-gray-600"><%= home.rating %></span>
            </div>
            <a href="/homes/<%= home._id %>" class="bg-blue-500 text-white px-4 py-2 mt-4 rounded-lg hover:bg-blue-600 transition-colors">
              Details
            </a>
            <%- include("../partials/add-to-favourite" , {home: home}) %>
          </div>
        <% }) %>
      </div>
    </div>
  </main>
</body>
</html>
